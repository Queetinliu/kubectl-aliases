alias kex='kubectl exec -i -t'
alias klo='kubectl logs -f'
alias kgpo='kubectl get pods'
alias kdpo='kubectl describe pods'
alias krmpo='kubectl delete pods'
alias kgno='kubectl get nodes'
alias kdno='kubectl describe nodes'
alias kgns='kubectl get namespaces'
alias kgpoowide='kubectl get pods -o=wide'
alias kev='kubectl get events --sort-by=.metadata.creationTimestamp'
#alias kgpour='kubectl get pods -A --field-selector=status.phase!=Running | grep -v Complete'
alias kgpour='kubectl get pods -A -o custom-columns="NAMESPACE:metadata.namespace,POD:metadata.name,STATE:status.containerStatuses[*].state.waiting.reason"| grep -v "<none>"'
alias kgpore='kubectl get pods |tail -n +2|sort -rn -k 4|head -n 5'
alias kgporea='kubectl get pods -A|tail -n +2|sort -rn -k 5|head -n 10'
